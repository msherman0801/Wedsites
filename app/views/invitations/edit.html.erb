<div class="d-flex justify-content-center" style="margin-top: 5%;">
    <div class="row">
        <div class="col-md-12">
            <% if !@invitation %>
                <h1>No invitation found!</h1><br />
                <%= link_to "Go Back", website_path(@website), class: 'btn btn-lg btn-primary' %>
            <% else %>
        </div>
        <div class="col-md-12">
            <%= form_for :website, action: website_invitation_path(@website, @invitation), method: :patch,  class: "form-group" do |f| %>
            <%= hidden_field_tag :invitation, @invitation.id %>
            <form class="form-horizontal">
                <fieldset>
                    <h3 style="font-family: 'Parisienne', cursive;">Invitation for</h3>
                    <h1 style="font-size: 40px;"><%= @invitation.first_name %> <%= @invitation.last_name %></h1>
                    <hr>

                    <div class="form-group">
                        <label class="col-lg-2 control-label" style="font-size: 12px;">Will you be attending?</label>
                        <div class="col-lg-10">
                            <div class="radio">
                                <label>
                                    <input type="radio" name="attending" id="attending" value="true" checked="">
                                    Attending
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    <input type="radio" name="attending" id="attending" value="false">
                                    Not Attending
                                </label>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="select" class="col-lg-2 control-label" style="font-size: 12px;">Guests</label>
                        <div class="col-lg-10">
                            <select class="form-control" id="select" name="guests">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                            </select>
                            <br>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="textArea" class="col-lg-2 control-label" style="font-size: 12px;">Allergies?</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="3" id="textArea" name="allergies"></textarea>
                            <span class="help-block">To best identify dining choices, we ask that you specify any food allergies you or your guests may have.</span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-lg btn-info">Submit</button>
                            <button href=<%=website_invitations_path(@website)%> class="btn btn-lg">Go Back</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        <% end %>
        <% end %>
    </div>
</div>