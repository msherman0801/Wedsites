<%= form_for(@event, class: "form-group") do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", required: "required" %>
    <br />
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", required: "required" %>
    <br />
    <%= f.label :date %>
    <%= f.text_field :date, class: "form-control", required: "required" %>
    <br />
    <%= f.collection_check_boxes :invitation_ids, @invitations.all, :id, :full_name %>
    <br />
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control", required: "required" %>
    <br />
    <%= f.label :attire %>
    <%= f.select :attire, options_for_select(["Formal", "Non-Formal"]), required: "required" %>
    <br></br>
    <%= f.submit class: "btn btn-primary" %>
<% end %>