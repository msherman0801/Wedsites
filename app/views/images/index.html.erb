
<div class="col-sm-12 col-md-12 well" id="content">
    <h2 style="margin-bottom: 1em;">Images</h2>        
    <center>
        <%= form_for(current_website, url: images_path, method: :post) do |f| %>
            <%= f.label :uploads %>
            <%= f.file_field :uploads, multiple: true %>
            <%= f.submit "Upload Photo", class: "btn btn-primary" %>
        <% end %>
    </center><br></br>
    <div class="container">
        <div class="row">
            <% if @images.attached? %>
                <% @images.each do |image| %>
                    <div class="col-lg-3 col-md-4 col-xs-6 thumb" style="margin-bottom: 5%;">
                        <a href=<%=image_path(image)%>><%= image_tag(image, width: '100%', style: 'max-height: 150px; border: 1px solid #000000;', class: 'img-responsive') %></a>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>